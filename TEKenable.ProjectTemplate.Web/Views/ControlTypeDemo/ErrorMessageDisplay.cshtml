            </div>
        </div>

        <div class="form-group">
            <div class="col-md-6 col-sm-6">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </div>
    }
</div>

@section Scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}